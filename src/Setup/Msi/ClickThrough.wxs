<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>

        <!-- Directories -->
        <DirectoryRef Id="BinDir">
            <Component Id="ClickThroughBinaries" Guid="4CC16CF5-837F-44E5-9579-0B9CF03E40D0" Win64="no">
                <File Source="ct.exe" KeyPath="yes" Vital="yes" />
                <File Source="ct.exe.config" Vital="yes" />
            </Component>

            <Component Id="ClickThroughUIBinaries" Guid="6B670C84-8E5E-4763-B5A8-BC46A3F8CF43" Win64="no">
                <File Source="ctui.exe" KeyPath="yes" Vital="yes" />
                <File Source="ctui.exe.config" Vital="yes" />

                <Shortcut Id="ClickThroughShortcut" Directory="WixShortcutFolder" Name="ClickThrough" Advertise="yes"/>
            </Component>
        </DirectoryRef>

        <DirectoryRef Id="WixShortcutFolder">
            <Component Id="ClickThroughShortcutComponent" Guid="15C5BC7B-A578-4FB3-842F-A0E14D44DEE2" Win64="no">
                <RegistryKey Root="HKCU" Key="Software\Windows Installer XML 3\ClickThrough" Action="createAndRemoveOnUninstall">
                    <RegistryValue Name="Installed" Value="[BinDir]" Type="string" KeyPath="yes"/>
                </RegistryKey>
            </Component>
        </DirectoryRef>

        <!-- Features -->
        <ComponentGroup Id="ClickThroughComponents" >
            <ComponentRef Id="ClickThroughBinaries" />
            <ComponentRef Id="ClickThroughUIBinaries" />
            <ComponentRef Id="ClickThroughShortcutComponent" />
        </ComponentGroup>
    </Fragment>
</Wix>
