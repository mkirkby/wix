<?include WixVer.wxi ?>
<?include WixDistribution.wxi?>
<?define ProductDirectoryName = "Windows Installer XML v3.6" ?>
<?define ProductName = "WiX Toolset v$(var.WixVersion)" ?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Product Id="*" Name="$(var.ProductName) MSI Package" Language="1033" Manufacturer="Microsoft Corporation" Version="$(var.WixVersion)" UpgradeCode="3618724B-2523-44F9-A908-866AA619504D">

        <Package Platform="$(var.Platform)" Manufacturer="Microsoft Corporation" Description="Windows Installer XML Toolset Visual Studio Package" Comments="Windows Installer XML Toolset Visual Studio Package" Compressed="yes" InstallerVersion="200" Languages="1033" Keywords="Database, Installer" ShortNames="no" SummaryCodepage="1252" />

        <!-- Major upgrade -->
        <MajorUpgrade DowngradeErrorMessage="A later version of [ProductName] is already installed." />

        <Condition Message="An administrator must approve or install [ProductName].">
            Privileged
        </Condition>

      <!-- Media -->
      <Media Id="1" Cabinet="Wix36.cab" />
      <Media Id="2" Cabinet="Wix36lib.cab" />

      <!-- Icons -->
      <Icon Id="WixIcon" SourceFile="$(var.VotiveRoot)\Icons\ProjectFile.ico" />
      <Icon Id="WixSetupIcons.ico" SourceFile="wixsetupicons.dll" />

      <!-- Properties -->
      <Property Id="ARPHELPLINK" Value="http://sourceforge.net/support/getsupport.php?group_id=105970" />
      <Property Id="ARPPRODUCTICON" Value="WixIcon" />
      <Property Id="ARPURLINFOABOUT" Value="http://wix.sourceforge.net" />
      <Property Id="ARPURLUPDATEINFO" Value="http://wix.sourceforge.net" />

      <!-- Directories -->
        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFilesFolder" >
                <Directory Id="APPLICATIONFOLDER" Name="$(var.ProductDirectoryName)" />

                <Directory Id="ProgramMenuFolder" Name="ProgMenu">
                    <Directory Id="WixShortcutFolder" Name="$(var.ProductName)" />
                </Directory>
            </Directory>
        </Directory>

        <!-- Features -->
        <Feature Id="Feature_WiX" Title="WiX Toolset" Description="Windows Installer XML toolset" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="1" Absent="disallow">
            <ComponentGroupRef Id="Toolset" />
            <ComponentGroupRef Id="Extensions" />
            <ComponentGroupRef Id="SetupExeComponents" />
            <Component Id="ProductInformation" Directory="APPLICATIONFOLDER" Guid="8A0EC6E0-5AAF-439B-99BF-A8997BFA8BC8" Win64="no">
                <RemoveFolder Id="CleanupShortcutFolder" Directory="WixShortcutFolder" On="uninstall" />

                <RegistryKey Root="HKLM" Key="$(var.WixKeyRoot)\$(var.WixMajorMinor)">
                    <RegistryValue Name="InstallRoot" Value="[BinDir]" Type="string" KeyPath="yes"/>
                    <RegistryValue Name="ProductVersion" Value="[ProductVersion]" Type="string" />
                </RegistryKey>
            </Component>
        </Feature>

        <Feature Id="Feature_VS2005" Title="Visual Studio 2005 Integration" Description="Votive package and schema files for IntelliSense in the Visual Studio 2005 editor" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="0" TypicalDefault="install">
            <Condition Level="1">VS2005DEVENV OR VS2005_ROOT_FOLDER OR REMOVE</Condition>

            <Feature Id="Feature_IS2005" Title="IntelliSense" Description="Schema files for IntelliSense in the Visual Studio 2005 editor" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="0" TypicalDefault="install">
                <Condition Level="1">VS2005DEVENV OR VS2005_ROOT_FOLDER OR REMOVE</Condition>
                <ComponentRef Id="VSSchema2005" />
                <ComponentGroupRef Id="Extensions" />
            </Feature>

            <Feature Id="Feature_Votive2005" Title="Project Templates" Description="Votive Package for Visual Studio 2005" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="0" TypicalDefault="install">
                <Condition Level="1">( VS2005DEVENV AND VS2005PROJECTAGGREGATOR2 ) OR REMOVE</Condition>
                <ComponentGroupRef Id="VotiveCommon" />
                <ComponentGroupRef Id="VotiveVS2005" />
            </Feature>
        </Feature>

        <Feature Id="Feature_VS2008" Title="Visual Studio 2008 Integration" Description="Votive package and schema files for IntelliSense in the Visual Studio 2008 editor" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="0" TypicalDefault="install">
            <Condition Level="1">VS90DEVENV OR VS90_ROOT_FOLDER OR REMOVE</Condition>

            <Feature Id="Feature_IS2008" Title="IntelliSense" Description="Schema files for IntelliSense in the Visual Studio 2008 editor" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="0" TypicalDefault="install">
                <Condition Level="1">VS90DEVENV OR VS90_ROOT_FOLDER OR REMOVE</Condition>
                <ComponentRef Id="VSSchema2008" />
                <ComponentGroupRef Id="Extensions" />
            </Feature>

            <Feature Id="Feature_Votive2008" Title="Project Templates" Description="Votive Package for Visual Studio 2008" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="0" TypicalDefault="install">
                <Condition Level="1">VS90DEVENV OR REMOVE</Condition>
                <ComponentGroupRef Id="VotiveCommon" />
                <ComponentGroupRef Id="VotiveVS2008" />
            </Feature>
        </Feature>

        <?if $(var.BuildVotive2010)=true ?>
        <Feature Id="Feature_VS2010" Title="Visual Studio 2010 Integration" Description="Votive package and schema files for IntelliSense in the Visual Studio 2010 editor" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="0" TypicalDefault="install">
            <Condition Level="1">VS2010DEVENV OR VS2010_ROOT_FOLDER OR REMOVE</Condition>

            <FeatureRef Id="Feature_IS2010" />
            <FeatureRef Id="Feature_Votive2010" />
        </Feature>
        <?endif?>

<!-- ClickThrough is disabled in WiX v3.6
        <Feature Id="Feature_ClickThrough" Title="ClickThrough" Description="Extensible UI to create syndicated applications for specialized areas" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="1" TypicalDefault="install">
            <ComponentGroupRef Id="ClickThroughComponents" />
            <ComponentGroupRef Id="Extensions" />
            <ComponentGroupRef Id="SetupExeComponents" />
        </Feature>
-->

        <Feature Id="Feature_NAnt" Title="NAnt Support" Description="Custom tasks for the NAnt build tool" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="1" TypicalDefault="install">
            <ComponentRef Id="NAntTasks" />
        </Feature>

        <Feature Id="Feature_MSBuild" Title="MSBuild Support" Description="Custom tasks for the MSBuild build tool" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="1" TypicalDefault="install">
            <ComponentRef Id="WixMSBuildBinaries36" />
            <ComponentRef Id="Microsoft.Deployment.WindowsInstaller.MSBuild36" />
            <?if $(var.Platform)=x64 ?>
            <ComponentRef Id="WixMSBuildBinaries36_64" />
            <ComponentRef Id="Microsoft.Deployment.WindowsInstaller.MSBuild36_64" />
            <?endif?>
        </Feature>

        <Feature Id="Feature_SDK" Title="WiX SDK" Description="Headers, libraries, and tools for building WiX extensions and custom actions" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="1" TypicalDefault="install">
            <ComponentRef Id="DocCompiler" />
            <ComponentRef Id="MsgGen" />
            <ComponentRef Id="XsdGen" />
            <ComponentRef Id="XsdStitch" />
            <ComponentGroupRef Id="SdkLibs" />
            <ComponentRef Id="SdkHeaders" />
            <ComponentGroupRef Id="BurnSdkComponents" />
            <ComponentGroupRef Id="DtfComponents" />
            <ComponentGroupRef Id="DtfCATemplates" />
            <ComponentGroupRef Id="LuxComponentGroup" />
        </Feature>

        <Feature Id="Feature_Doc" Title="WiX Documentation" Description="Compiled help and schema files for WiX and MSI" AllowAdvertise="no" Display="expand" InstallDefault="local" Level="1" TypicalDefault="install">
            <ComponentRef Id="ChmDocumentation" />
            <ComponentRef Id="MsiSdkChm" />
            <ComponentRef Id="WixSchemas" />
            <ComponentGroupRef Id="DtfDocs" />
        </Feature>

        <CustomAction Id="CA_SetLatestDevenv_2005" Property="LATEST_DEVENV_EXE" Value="[VS2005DEVENV]"/>
        <CustomAction Id="CA_SetLatestDevenv_2008" Property="LATEST_DEVENV_EXE" Value="[VS90DEVENV]"/>
        <CustomAction Id="CA_SetLatestDevenvCommand_2005" Property="LATEST_DEVENV_EXE_COMMAND" Value="&amp;Open in Visual Studio 2005"/>
        <CustomAction Id="CA_SetLatestDevenvCommand_2008" Property="LATEST_DEVENV_EXE_COMMAND" Value="&amp;Open in Visual Studio 2008"/>

        <!-- Install Sequences -->
        <InstallExecuteSequence>
            <Custom Action="VS2005Setup" Before="InstallFinalize"><![CDATA[&Feature_Votive2005 > 1]]></Custom>
            <Custom Action="VS90Setup" Before="InstallFinalize"><![CDATA[&Feature_Votive2008 > 1]]></Custom>
            <Custom Action="CA_SetLatestDevenv_2005" After="CostFinalize"><![CDATA[VS2005DEVENV AND NOT VS90DEVENV AND NOT VS2010DEVENV]]></Custom>
            <Custom Action="CA_SetLatestDevenv_2008" After="CostFinalize"><![CDATA[VS90DEVENV AND NOT VS2010DEVENV]]></Custom>
            <Custom Action="CA_SetLatestDevenvCommand_2005" After="CostFinalize"><![CDATA[VS2005DEVENV AND NOT VS90DEVENV AND NOT VS2010DEVENV]]></Custom>
            <Custom Action="CA_SetLatestDevenvCommand_2008" After="CostFinalize"><![CDATA[VS90DEVENV AND NOT VS2010DEVENV]]></Custom>
        </InstallExecuteSequence>

        <InstallUISequence>
            <FindRelatedProducts Before="LaunchConditions" />
        </InstallUISequence>

        <!-- WixUI_Advanced scaffolding (to be replaced by extension authoring) -->
        <Property Id="ApplicationFolderName" Value="$(var.ProductDirectoryName)" />
        <Property Id="ALLUSERS" Value="1" />
        <Property Id="WixAppFolder" Value="WixPerMachineFolder" />

        <WixVariable Id="WixUISupportPerMachine" Value="1" />
        <WixVariable Id="WixUISupportPerUser" Value="0" />

        <UI>
            <DialogRef Id="PrerequisitesDlg" />
            <UIRef Id="WixUI_Advanced" />
            <UIRef Id="WixUI_ErrorProgressText" />

            <ProgressText Action="VS2005Setup" Template="[1]">Updating Visual Studio 2005 registration</ProgressText>
            <ProgressText Action="VS90Setup" Template="[1]">Updating Visual Studio 2008 registration</ProgressText>
        </UI>
    </Product>

    <Fragment>
        <Feature Id="Feature_IS2010" Title="IntelliSense" Description="Schema files for IntelliSense in the Visual Studio 2010 editor" AllowAdvertise="no" Display="1" InstallDefault="local" Level="0" TypicalDefault="install">
            <Condition Level="1">VS2010DEVENV OR VS2010_ROOT_FOLDER OR REMOVE</Condition>
            <ComponentRef Id="VSSchema2010" />
            <ComponentGroupRef Id="Extensions" />
        </Feature>

        <Feature Id="Feature_Votive2010" Title="Project Templates" Description="Votive Package for Visual Studio 2010" AllowAdvertise="no" Display="2" InstallDefault="local" Level="0" TypicalDefault="install">
            <Condition Level="1">VS2010DEVENV OR REMOVE</Condition>
            <ComponentGroupRef Id="VotiveCommon" />
            <ComponentGroupRef Id="VotiveVS2010" />
        </Feature>

        <CustomAction Id="CA_SetLatestDevenv_2010" Property="LATEST_DEVENV_EXE" Value="[VS2010DEVENV]"/>
        <CustomAction Id="CA_SetLatestDevenvCommand_2010" Property="LATEST_DEVENV_EXE_COMMAND" Value="&amp;Open in Visual Studio 2010"/>

        <InstallExecuteSequence>
            <Custom Action="VS2010Setup" Before="InstallFinalize"><![CDATA[&Feature_Votive2010 > 1]]></Custom>
            <Custom Action="CA_SetLatestDevenv_2010" After="CostFinalize"><![CDATA[VS2010DEVENV]]></Custom>
            <Custom Action="CA_SetLatestDevenvCommand_2010" After="CostFinalize"><![CDATA[VS2010DEVENV]]></Custom>
        </InstallExecuteSequence>

        <UI>
            <ProgressText Action="VS2010Setup" Template="[1]">Updating Visual Studio 2010 registration</ProgressText>
        </UI>
    </Fragment>
</Wix>