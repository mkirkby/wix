          xmlns:xse="http://schemas.microsoft.com/wix/2005/XmlSchemaExtension"
    targetNamespace="http://schemas.microsoft.com/wix/MmcExtension"
              xmlns="http://schemas.microsoft.com/wix/MmcExtension">
