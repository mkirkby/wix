<?xml version="1.0" encoding="utf-8"?>
<Theme xmlns="http://wixtoolset.org/schemas/thmutil/2010">
    <Window Width="500" Height="300" HexStyle="100a0000" FontId="2">[BundleName]</Window>
    <Font Id="0" Height="-16" Weight="700" Foreground="000000"/>
    <Font Id="1" Height="-18" Weight="700" Foreground="000000"/>
    <Font Id="2" Height="-11" Weight="550" Foreground="000000" Background="FFFFFF"/>
    <Page Name="Install">
        <Text X="10" Y="10" Width="0" Height="23" FontId="1">License Agreement</Text>
        <Richedit Name="EulaRichedit" X="10" Y="33" Width="-10" Height="-90" FontId="0"/>
        <Checkbox Name="EulaAcceptCheckbox" X="-10" Y="-55" Width="260" Height="23" FontId="0">Accept license agreement.</Checkbox>
        <Button Name="OptionsButton" X="-190" Y="-10" Width="80" Height="30" FontId="0" HideWhenDisabled="yes">Options</Button>
        <Button Name="InstallButton" X="-100" Y="-10" Width="80" Height="30" FontId="0">Install</Button>
        <Button Name="WelcomeCancelButton" X="-10" Y="-10" Width="80" Height="30" FontId="0">Close</Button>
        <Image X="5" Y="-5" Width="200" Height="80" ImageFile="logo.bmp" />
    </Page>
    <Page Name="Options">
        <Text X="10" Y="10" Width="0" Height="23" FontId="1">Options</Text>
        <Text X="10" Y="55" Width="-10" Height="20" FontId="0">Install location</Text>
        <Editbox Name="FolderEditbox" X="10" Y="75" Width="-100" Height="20" FontId="2" FileSystemAutoComplete="yes" />
        <Button Name="BrowseButton" X="-10" Y="70" Width="80" Height="30" FontId="0">Browse</Button>
        <Button Name="OptionsOkButton" X="-100" Y="-10" Width="80" Height="30" FontId="0">OK</Button>
        <Button Name="OptionsCancelButton" X="-10" Y="-10" Width="80" Height="30" FontId="0">Cancel</Button>
        <Image X="5" Y="-5" Width="200" Height="80" ImageFile="logo.bmp" />
    </Page>
    <Page Name="Progress">
        <Text X="10" Y="10" Width="0" Height="23" FontId="1">Setup Progress</Text>
        <Text X="10" Y="80" Width="-10" Height="20" FontId="2">[ProgressAction]: [ProgressPackageName]</Text>
        <Progressbar X="10" Y="110" Width="-10" Height="25" />
        <Button Name="ProgressCancelButton" X="-10" Y="-10" Width="100" Height="30" FontId="0">Cancel</Button>
        <Image X="5" Y="-5" Width="200" Height="80" ImageFile="logo.bmp" />
    </Page>
    <Page Name="Modify">
        <Text X="10" Y="10" Width="0" Height="23" FontId="1">Modify Setup</Text>
        <Button Name="RepairButton" X="40" Y="40" Width="200" Height="65" FontId="0">Repair</Button>
        <Button Name="UninstallButton" X="40" Y="110" Width="200" Height="65" FontId="0">Uninstall</Button>
        <Button Name="ModifyCancelButton" X="-10" Y="-10" Width="100" Height="30" FontId="0">Close</Button>
        <Image X="5" Y="-5" Width="200" Height="80" ImageFile="logo.bmp" />
    </Page>
    <Page Name="Finish">
        <Text X="10" Y="10" Width="0" Height="23" FontId="1">Setup Successful</Text>
        <Button Name="LaunchButton" X="-100" Y="-10" Width="80" Height="30" FontId="0" HideWhenDisabled="yes">Launch</Button>
        <Button Name="RestartButton" X="-100" Y="-10" Width="80" Height="30" FontId="0" HideWhenDisabled="yes">Restart</Button>
        <Button Name="FinishCancelButton" X="-10" Y="-10" Width="80" Height="30" FontId="0">Finish</Button>
        <Image X="5" Y="-5" Width="200" Height="80" ImageFile="logo.bmp" />
    </Page>
    <Page Name="Failure">
        <Text X="10" Y="10" Width="0" Height="23" FontId="1">Setup Failed</Text>
        <Button Name="FailureCancelButton" X="-10" Y="-10" Width="80" Height="30" FontId="0">Close</Button>
        <Image X="5" Y="-5" Width="200" Height="80" ImageFile="logo.bmp" />
    </Page>
</Theme>