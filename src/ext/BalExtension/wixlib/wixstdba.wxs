<?xml version='1.0' encoding='utf-8'?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <BootstrapperApplication Id="WixStandardBootstrapperApplication.RtfLicense" SourceFile="wixstdba.dll">
            <Payload Name="thm.xml" SourceFile="!(wix.WixStdbaThemeXml=$(var.RtfThemeXml))" />
            <Payload Name="thm.wxl" SourceFile="!(wix.WixStdbaThemeWxl=$(var.RtfThemeWxl))" />
            <Payload Name="logo.bmp" SourceFile="!(wix.WixStdbaLogo=$(var.LogoImage))" />

            <Payload Name="!(wix.WixStdbaLicenseRtfName=license.rtf)" SourceFile="!(wix.WixStdbaLicenseRtf=$(var.LoremIpsumLicenseFile))" />
        </BootstrapperApplication>

        <Variable Name="EulaFile" Value="!(wix.WixStdbaLicenseRtfName=license.rtf)" />
    </Fragment>

    <Fragment>
        <BootstrapperApplication Id="WixStandardBootstrapperApplication.HyperlinkLicense" SourceFile="wixstdba.dll">
            <Payload Name="thm.xml" SourceFile="!(wix.WixStdbaThemeXml=$(var.HyperlinkThemeXml))" />
            <Payload Name="thm.wxl" SourceFile="!(wix.WixStdbaThemeWxl=$(var.HyperlinkThemeWxl))" />
            <Payload Name="logo.bmp" SourceFile="!(wix.WixStdbaLogo=$(var.LogoImage))" />
        </BootstrapperApplication>

        <Variable Name="EulaHyperlinkTarget" Value="!(wix.WixStdbaLicenseUrl)" />
    </Fragment>

    <Fragment>
        <BootstrapperApplication Id="WixStandardBootstrapperApplication.Foundation" SourceFile="wixstdba.dll" />
    </Fragment>
</Wix>
