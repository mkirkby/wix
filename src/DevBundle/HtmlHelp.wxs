<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">

  <Fragment>
    <util:RegistrySearch Root="HKLM" Key="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\HTML Help Workshop" Value="UninstallString" Variable="HtmlHelpUninstallString" Format="raw" />

    <PackageGroup Id="HtmlHelp">
      <ExePackage Name="packages\htmlhelp.exe" SourceFile="HtmlHelp\" DetectCondition="HtmlHelpUninstallString" Permanent="yes" InstallCommand="/Q" Cache="no" PerMachine="yes" />
    </PackageGroup>
  </Fragment>
</Wix>
