<Window x:Class="Microsoft.Tools.WindowsInstallerXml.Bootstrapper.CancelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CancelWindow" Height="150" Width="350" AllowsTransparency="True" WindowStyle="None" 
    BorderThickness="1" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Window.Resources>
        <ResourceDictionary x:Uid="Styles" Source="Styles.xaml"/>
    </Window.Resources>
    <Border Style="{StaticResource WindowBorder}">
        <StackPanel Margin="6" Orientation="Vertical">
            <Label Margin="10" Style="{StaticResource TitleStyle}" FontSize="16">Do you want to cancel setup?</Label>
            <StackPanel Margin="0,20" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="10" Style="{StaticResource NavigationButtonStyle}" Click="CancelYes_Click" IsCancel="False">Yes</Button>
                <Button Margin="10" Style="{StaticResource NavigationButtonStyle}" Click="CancelNo_Click">No</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
