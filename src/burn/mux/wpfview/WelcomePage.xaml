<w:PageBase
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:w="clr-namespace:Microsoft.Tools.WindowsInstallerXml.Bootstrapper"
    mc:Ignorable="d"
    x:Class="Microsoft.Tools.WindowsInstallerXml.Bootstrapper.WelcomePage"
    d:DesignWidth="700" d:DesignHeight="385">
    <w:PageBase.Resources>
        <ResourceDictionary x:Uid="Styles" Source="Styles.xaml"/>
    </w:PageBase.Resources>
    <Grid Background="Transparent" Margin="34, 2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center">
            <Label Content="{Binding Path=CompanyName}" FontSize="16" VerticalAlignment="Center" Style="{StaticResource BaseControlStyle}"/>
            <Label Content="{Binding Path=ProductName}" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="0, 2" Style="{StaticResource BaseControlStyle}"/>
        </StackPanel>
        <Label Grid.Row="1" Content="Please wait while setup initializes." VerticalAlignment="Bottom" FontSize="10" Margin="2" Style="{StaticResource BaseControlStyle}"/>
    </Grid>
</w:PageBase>