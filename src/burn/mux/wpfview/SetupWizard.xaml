<Window x:Class="Microsoft.Tools.WindowsInstallerXml.Bootstrapper.SetupWizard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:w="clr-namespace:Microsoft.Tools.WindowsInstallerXml.Bootstrapper"
    Title="MainWindow" Height="385" Width="700" AllowsTransparency="True" WindowStyle="None" 
    BorderThickness="1" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Window.CommandBindings>
        <CommandBinding Command="NextPage" CanExecute="NextPage_CanExecute" Executed="NextPage_Executed"/>
        <CommandBinding Command="PreviousPage" CanExecute="PreviousPage_CanExecute" Executed="PreviousPage_Executed"/>
        <CommandBinding Command="Close" Executed="Close_Executed"/>
        <CommandBinding Command="{x:Static w:SetupWizard.Cancel}" Executed="Cancel_Executed"/>
    </Window.CommandBindings>
    <Window.Resources>
        <ResourceDictionary x:Uid="Styles" Source="Styles.xaml"/>
    </Window.Resources>
    <Border Style="{StaticResource WindowBorder}">
        <Grid Margin="6" Name="gridMain"/>
    </Border>
</Window>
