<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
   <PropertyGroup>
      <BobsBinPath>$(MSBuildProjectDirectory)\..\..\..\..\build\debug\x86\</BobsBinPath>

      <DefineSolutionProperties>false</DefineSolutionProperties>
      <LogLevel>debug</LogLevel>
      <LogMode>append</LogMode>
      <LogPath>%TEMP%\foo\global.log</LogPath>
      <DefaultCompressionLevel>none</DefaultCompressionLevel>
      <OutDir>$(MSBuildProjectDirectory)\..\..\..\..\test\src\Bootstrapper\UnitTest\data\</OutDir>
      <StubPath>burnstub.exe</StubPath>
      <VerboseOutput>true</VerboseOutput>
   </PropertyGroup>

   <ItemGroup>
      <UX Include="
        $(BobsBinPath)stdux.dll;
        $(BobsBinPath)thm.xml;
        $(BobsBinPath)en-us.wxl;
        $(BobsBinPath)ps-ps.wxl;
        $(BobsBinPath)stdux.png;
        $(BobsBinPath)tou.htm;
        " />

      <Chain Include="$(MSBuildProjectDirectory)\..\packages\ExePkg\bin\$(Configuration)\ExePkg.exe">
         <Id>Package0</Id>
         <LogLevel>normal</LogLevel>
         <LogMode>unique</LogMode>
         <DetectionCondition>1 AND 1</DetectionCondition>
         <InstallArguments>-install</InstallArguments>
         <RepairArguments>-repair</RepairArguments>
         <UninstallArguments>-uninstall</UninstallArguments>
      </Chain>

      <Chain Include="$(MSBuildProjectDirectory)\..\packages\bin\$(Configuration)\Package1.msi">
         <Id>Package1</Id>
         <Vital>true</Vital>
         <Packaging>embedded</Packaging>
         <LogLevel>verbose</LogLevel>
         <LogMode>overwrite</LogMode>
         <LogPath>%TEMP%\foo\pkg1v.log</LogPath>
         <Properties>TARGETDIR=PACKAGE1TARGETDIR;ROCKIN=BOB</Properties>
      </Chain>

      <Chain Include="$(MSBuildProjectDirectory)\..\packages\bin\$(Configuration)\Package2.msi">
         <Id>Package2</Id>
         <LogLevel>normal</LogLevel>
         <LogMode>unique</LogMode>
         <Properties>TARGETDIR=PACKAGE2TARGETDIR;ROCKIN=BOB;</Properties>
      </Chain>

      <Chain Include="$(MSBuildProjectDirectory)\..\packages\bin\$(Configuration)\Package3.msi">
         <Id>Package3</Id>
         <LogLevel>debug</LogLevel>
         <LogMode>overwrite</LogMode>
         <LogPath>%TEMP%\foo\pkg3d.log</LogPath>
         <Properties>TARGETDIR=PACKAGE3TARGETDIR;ROCKIN=BOB;WHOSYOUR=DADDY</Properties>
      </Chain>
   </ItemGroup>

   <Import Project="..\..\msbuild\burn.targets" />
</Project>