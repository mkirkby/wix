<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">

  <?define TestDataDirectory="$(env.WIX)\test\data\Integration\BuildingPackages\Bundle\Files"?>

  <Bundle>

    <UX Name="Setup.exe" SourceFile="$(var.TestDataDirectory)\Bootstrapper.exe"/>

    <Chain>
      <MsiPackage SourceFile="$(var.TestDataDirectory)\Packages\MsiPackage.msi"/>
    </Chain>

    <Variable Name="variable1" Value="Variable1Value"/>
    <Variable Name="variable2" Value="Variable2Value"/>
    <Variable Name="variable # 3" Value="Variable3Value"/>


    <util:DirectorySearch Id="DirectorySearch2" Variable="variable2" Path="%windir%\System32" After="DirectorySearch3"/>
    <util:DirectorySearch Id="DirectorySearch3" Variable="variable # 3" Path="%windir%\System32" Condition="true" After="DirectorySearch1"/>
    <util:DirectorySearch Id="DirectorySearch1" Variable="variable1" Path="%windir%\System" Condition="1 &amp; 2 &lt; 3"/>


  </Bundle>
</Wix>
