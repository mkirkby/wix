<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <?define TestDataDirectory="$(env.WIX_ROOT)\test\data\Integration\BuildingPackages\Bundle\Files"?>

  <Bundle Name="Wix Test Bundle" Version="1.0.0.0" Manufacturer="Microsoft Corporation" UpgradeCode="{D4CD70BC-7ABD-4fcd-8E10-C8DB53C73415}">

    <UX SourceFile="$(var.TestDataDirectory)\Bootstrapper.exe"/>

    <Chain>
	<PackageGroupRef Id="PackageGroup1" />
	<PackageGroupRef Id="PackageGroup2" />
    </Chain>
    
  </Bundle>
  
  <Fragment>
    <PackageGroup Id="PackageGroup1">
      <MsiPackage Id="Package1" SourceFile="$(var.TestDataDirectory)\Packages\MsiPackage.msi"/>
      <ExePackage Id="Package2" SourceFile="$(var.TestDataDirectory)\Packages\ExePackage.exe"/>
    </PackageGroup>

    <PackageGroup Id="PackageGroup2">
      <MspPackage Id="Package3" SourceFile="$(var.TestDataDirectory)\Packages\MspPackage.msp"/>
      <ExePackage Id="Package2" SourceFile="$(var.TestDataDirectory)\Packages\ExePackage.exe"/>
    </PackageGroup>
  </Fragment>
</Wix>

