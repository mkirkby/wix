            </MsiPackage>
        </Chain>
    </Bundle>

    <Fragment>
        <util:RegistrySearch Root="HKLM" Key="SOFTWARE\Microsoft\NET Framework Setup\NDP\v2.0.50727" Value="Install" Variable="Netfx2Installed" Result="value" />

        <PackageGroup Id="Netfx">
