                        DownloadUrl="http://download.microsoft.com/download/5/6/7/567758a3-759e-473e-bf8f-52154438565a/dotnetfx.exe"
                        DetectCondition="Netfx2Installed = 1" InstallCommand='/q:a /c:"install /l /q"' />
        </PackageGroup>
    </Fragment>

