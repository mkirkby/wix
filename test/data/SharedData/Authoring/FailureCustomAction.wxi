<?xml version="1.0" encoding="UTF-8"?>
<!--Defines a component that is shared across several tests-->
<Include xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <DirectoryRef Id="TARGETDIR">
    <Component Id="FailureCustomActionComponent" Guid="12345678-9ABC-DEF0-1234-567890000000" DiskId="1" KeyPath="yes">
      <CreateFolder />
      <File Id="CAFile" Name="CustomActionFail.exe"  DiskId="1" Source="$(env.WIX)\test\data\SharedData\Files\CustomActionFail.exe" />
    </Component>
  </DirectoryRef>

  <CustomAction Id="CaFail"  FileKey="CAFile" Execute="immediate" Return="check" ExeCommand=""/>
</Include>